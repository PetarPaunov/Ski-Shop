@using SkiShop.Models.AccountViewModels

@model LoginViewModel

<section class="vh-100 bg-image"
         style="background-image: url('https://coresites-cdn-adm.imgix.net/whitelines_new/wp-content/uploads/2021/10/uAqsCyss.jpeg?fit=crop&w=1875&h=1250');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-10">
                            <h2 class="text-uppercase text-center mb-5">Sign in to your account</h2>

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example1cg" asp-for="@Model.UserName">Username</label>
                                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="@Model.UserName" />
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4cg" asp-for="@Model.Password">Password</label>
                                    <input type="password" id="form3Example4cg" class="form-control form-control-lg" asp-for="@Model.Password" />
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Don't have an account yet? <a class="fw-bold text-body" asp-controller="Account" asp-action="Register"><u>Register here</u></a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}