@using SkiShop.Core.Models.CommonViewModels

@model IEnumerable<UserOrdersViewModel>

<div class="container-fluid px-4">
	<h1 class="mt-4">Orders Table</h1>
	<ol class="breadcrumb mb-4">
	</ol>
	<div class="card mb-4">
		<div class="card-header">
			<i class="fas fa-table me-1"></i>
			Orders DataTable
		</div>
		<div class="card-body">
			<table id="datatablesSimple">
				<thead>
					<tr>
						<th>Username</th>
						<th>Email</th>
						<th>Phone Number</th>
						<th>Product Name</th>
						<th>Product Price</th>
						<th>Product Image</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var order in Model)
					{
						<tr>
							<td>@order.UserName</td>
							<td>@order.Email</td>
							<td>@order.PhoneNumber</td>
							<td>@order.ProductTitle</td>
							<td>@order.ProductPrice$</td>
							<td>
								<img src="@order.ImageUrl" width="100" height="150" />
							</td>
							<td>
								<a class="btn btn-warning mb-2" asp-area="Admin" asp-action="FinishOrder" asp-controller="Admin" asp-route-id="@order.OrderId">Finish</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>