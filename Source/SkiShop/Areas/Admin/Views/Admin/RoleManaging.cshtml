@using SkiShop.Core.Models.RoleViewModels

@model RoleViewModel

	<div class="col-md-6">
		<h2>Add new Role</h2>
		<form asp-area="Admin" asp-action="AddRole" asp-controller="Admin">
			<div class="input-group mb-3">
				<input asp-for="@Model.Name" type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
				<div class="input-group-append">
					<button  class="btn btn-outline-secondary" type="submit">Button</button>
				</div>
			</div>
		</form>
	</div>
	<div class="col-md-6">
		<h2>Remove Role</h2>
		<div class="input-group mb-3">
			<input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
			<div class="input-group-append">
				<button class="btn btn-outline-secondary" type="button">Button</button>
			</div>
		</div>
	</div>



